<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:orientation="vertical"
    android:padding="@dimen/distance_sexteen">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/text_twenty_two" />
    </FrameLayout>

    <Button
        android:id="@+id/search_sign"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/white"
        app:cornerRadius="@dimen/distance_sexteen"
        app:icon="@drawable/ic_search_sign_24"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/distance_eight"
        app:iconTint="@color/black"
        android:text="@string/search"
        android:textColor="@color/black"
        android:textSize="@dimen/text_twenty_two"
        android:textAllCaps="false"
        android:letterSpacing="0"
        android:fontFamily="@font/ysdisplay"
        >
    </Button>
    <Button
        android:id="@+id/media"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:cornerRadius="@dimen/distance_sexteen"
        android:backgroundTint="@color/white"
        app:icon="@drawable/ic_media_24"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/distance_eight"
        app:iconTint="@color/black"
        android:text="@string/media"
        android:textColor="@color/black"
        android:textSize="@dimen/text_twenty_two"
        android:textAllCaps="false"
        android:letterSpacing="0"
        android:textStyle=""
        android:fontFamily="@font/ysdisplay"
        />
    <Button
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:cornerRadius="@dimen/distance_sexteen"
        android:backgroundTint="@color/white"
        app:icon="@drawable/ic_settings_24"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/distance_eight"
        app:iconTint="@color/black"
        android:text="@string/settings"
        android:textColor="@color/black"
        android:textSize="@dimen/text_twenty_two"
        android:textAllCaps="false"
        android:letterSpacing="0"
        android:fontFamily="@font/ysdisplay"
        android:layout_marginBottom="12dp"
        />

</LinearLayout>