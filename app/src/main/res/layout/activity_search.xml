<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search_activity"
    android:background="?attr/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            style="@style/buttonBack"
            app:icon="@drawable/ic_back_arrow_24"
            android:contentDescription="@string/button_back"
            android:id="@+id/button_arrow"
            />

        <TextView
            style="@style/startTextUpOnPage"
            android:text="@string/search_text" />
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/search_edit_text"
            style="@style/searchBox"
            android:drawableStart="@drawable/ic_search_16"
            android:hint="@string/search_text"
            android:inputType="text"
            android:lines="1"
            android:maxLength="60"
            android:paddingStart="@dimen/distance_sexteen"
            android:paddingEnd="40dp">

            <requestFocus />

            </EditText>

        <ImageButton
            android:id="@+id/clear_icon"
            style="@style/icon_clear"
            android:contentDescription="@string/clear_button"
            android:src="@drawable/ic_clear_button_16"
            android:visibility="gone"/>

    </FrameLayout>

</LinearLayout>